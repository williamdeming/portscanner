<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="portscanner.controllers.EditEmailController">
    
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    
        <Label text="Enter new email: "
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>
 
        <TextField fx:id="emailAddText"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Button text="Add" fx:id="emailAddButton"
            GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#handleAddEmailButtonAction"/>
        
        <Label text="Delete an email: " 
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
 
        <TextField fx:id="emailDeleteText"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Button text="Delete" fx:id="emailDeleteButton"
            GridPane.columnIndex="1" GridPane.rowIndex="6" onAction="#handleDeleteEmailButtonAction"/>
        
        <TextArea fx:id="emailDisplayText" translateX="50.0" translateY="-240.0" prefHeight="300.0" prefWidth="300.0"
            editable="false"
            GridPane.columnIndex="2" GridPane.rowIndex="7"/>
        
        <Button text="Refresh Emails" fx:id="emailRefreshButton"
            translateX="50.0" translateY="-240.0"
            GridPane.columnIndex="2" GridPane.rowIndex="8" onAction="#handleRefreshEmailButtonAction"/>

    </GridPane>
    
    <stylesheets>
        <URL value="@/resources/styles/psentry.css"/>
    </stylesheets>
    
</AnchorPane>
